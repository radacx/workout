{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": "src/",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "removeComments": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "isolatedModules": false,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceRoot": "./",
    "mapRoot": "./"
  },
  "types": [
    "react",
    "react-native",
    "jest",
    "redux-persist",
    "mocha",
    "chai"
  ],
  "include": [
    "src/*"
  ],
  "exclude": [
    "android",
    "ios",
    "build",
    "node_modules",
    "windows",
    ".idea",
    "dist"
  ]
}
